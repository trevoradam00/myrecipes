<%= render 'shared/page_title', title: @recipe.name %>

<div class="row">
  <div class="col-md-4 pull-right center">
    
  <%= gravatar_for @recipe.chef, size: 200 %>
  <p>
    <h5>Brought to you by: <%= @recipe.chef.chefname %></h5>
  </p>

  </div>
    
  <div class="col-md-8">
    <h3><%= @recipe.summary %></h3>
    
    <div class="show_recipe">
      <%= image_tag(@recipe.picture.url, class: "gravatar") if @recipe.picture? %>
    </div>
    
    <div class="well relative" style="margin-top:25px">
      <p><strong>Steps:</strong></p>
      <%= simple_format(@recipe.description) %>
      <div class="like-wrapper orange">
          <%= link_to like_recipe_path(@recipe, like: true), method: :post do %>
            <i class="glyphicon glyphicon-thumbs-up orange"></i>
          <% end %>
          &nbsp;<%= @recipe.thumbs_up_total %></span>
          &nbsp;&nbsp;&nbsp;&nbsp;
          <%= link_to like_recipe_path(@recipe, like: false), method: :post do %>
            <i class="glyphicon glyphicon-thumbs-down orange"></i>
          <% end %>
          &nbsp;<%= @recipe.thumbs_down_total %>
      </div>
    </div>
  </div>

  <div class="col-md-8">
    <div class="lower_nav"><%= link_to "Back to Recipes", recipes_path, class: "btn btn-success btn-sm raised" %></div>
    <div class="lower_nav next_nav right"><%= link_to "Edit Recipe", edit_recipe_path(@recipe), class: "btn btn-success btn-sm raised" %></div>
    <div class="lower_nav next_nav right"><%= link_to "Add a Comment", "", class: "btn btn-success btn-sm raised" %></div>
  </div>
  
</div>
